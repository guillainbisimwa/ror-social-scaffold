<section class="user-section">
  <h2><%= "Name: #{@user.name}" %></h2>
  <% unless current_user.friend?(@user) %>
    <%= link_to 'Send invitation', friendships_path(@user), method: :post, class: 'profile-link' %>
  <% end %>
  <article class="timeline">
    <h3>Recent posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
  </article>
</section>
